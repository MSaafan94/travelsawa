<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_invoice_form_inherit" model="ir.ui.view">
            <field name="name">travel_sales.account_invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//h1[@class='mt0']" position="before">
                    <div name="button_box" class="oe_button_box">
                        <button class="oe_stat_button" type="object" name="get_payments"
                            icon="fa-car">
                            <field string="Payments" name="payment_count" widget="statinfo"/>
                        </button>
                    </div>
                </xpath>
            </field>
        </record>



          <record id="account_invoice_inherit" model="ir.ui.view">
            <field name="name">travel_sales.account_invoice.form.inh</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_button_box']" position="inside">
<!--                    <div name="button_box" class="oe_button_box">-->
                        <button class="oe_stat_button" type="object" name="get_payments"
                            icon="fa-car">
                            <field string="Payments" name="payment_count" widget="statinfo"/>
                        </button>
<!--                    </div>-->
                </xpath>
            </field>
        </record>
    </data>
</odoo>