                [ref('sales_team.group_sale_salesman_all_leads'),ref('sales_team.group_sale_manager')])]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
            </field>
        </record>


